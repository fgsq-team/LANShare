<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_item_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:layout_marginTop="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginBottom="3dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="4dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    tools:targetApi="lollipop">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/app_item_img_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_null" />

            <TextView
                android:id="@+id/app_item_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="应用名称"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/app_item_tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="应用大小"
                android:textSize="10sp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/app_item_img_select"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_null" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

